@{
}
@model RahulCrud.Models.AddStudentViewModel
<h1>Add Student</h1>
<form method="post">

<div class="mt-3">
<label class="form-label">Name</label>
<input type="text" class="form-control" asp-for="Name"/>
</div>
<div class="mt-3">
<label class="form-label">Phone</label>
<input type="text" class="form-control" asp-for="Phone"/>
</div>
<div class="mt-3">
<label class="form-label">Email</label>
<input type="text" class="form-control" asp-for="Email"/>
</div>
<div class="mt-3">
<label class="form-label">Location</label>
<input type="text" class="form-control" asp-for="Location"/>
</div>
<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="Subs" asp-for="Subscription" />
    <label class="form-check-label" for="Subs">Subscribe</label>
</div>
<div>
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>